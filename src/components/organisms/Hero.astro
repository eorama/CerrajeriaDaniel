---
import Button from "../atoms/Button";
import Badge from "../atoms/Badge";
import Icon from "../atoms/Icon";

const {} = Astro.props;
import { Image } from "astro:assets";
import heroTeamImg from "../../assets/images/hero_team.png";
---

<section class="relative bg-primary text-white py-20 lg:py-32 overflow-hidden">
  {
    /* Abstract Background - Replace with actual image later if needed, providing a robust fallback */
  }
  <div
    class="absolute inset-0 z-0 opacity-20 bg-[url('https://images.unsplash.com/photo-1558036117-15db97758668?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80')] bg-cover bg-center mix-blend-overlay"
  >
  </div>
  <div
    class="absolute inset-0 z-0 bg-gradient-to-r from-primary via-primary to-transparent opacity-90"
  >
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="max-w-3xl lg:max-w-none relative z-10">
        <div class="flex flex-wrap gap-3 mb-6">
          <Badge text="Llegamos en 30 minutos" />
          <Badge text="Servicio 24 Horas" />
        </div>

        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-black mb-6 leading-tight text-white font-heading"
        >
          Cerrajero Urgente <br class="hidden md:block" />
          <span class="text-action">24 Horas en Tenerife</span>
        </h1>

        <h2 class="text-xl md:text-2xl mb-6 font-medium text-gray-200">
          Cerrajero Tenerife 24 Horas Urgente – Servicio Rápido, Profesional y
          Siempre Disponible
        </h2>

        <p class="text-lg text-gray-300 mb-8 leading-relaxed max-w-2xl">
          ¿Te has quedado fuera de casa? ¿Has perdido las llaves o se ha roto la
          cerradura? No te preocupes. En Cerrajero Tenerife 24 Horas Urgente
          estamos listos para ayudarte en cualquier momento, todos los días del
          año, sin importar la hora ni el lugar en la isla.
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <Button
            variant="action"
            href="tel:+34922076289"
            className="text-xl px-8 py-4"
          >
            <Icon name="phone" className="mr-3" />
            Llamar Ahora 922 07 62 89
          </Button>
        </div>
      </div>

      <div class="hidden lg:block relative z-10 animate-fade-in-up delay-300">
        <Image
          src={heroTeamImg}
          alt="Equipo de Cerrajeros Profesionales Tenerife"
          loading="eager"
          class="w-full h-auto rounded-2xl shadow-2xl border-4 border-white/10 transform rotate-2 hover:rotate-0 transition-transform duration-500 object-cover"
        />
      </div>
    </div>
  </div>
</section>
