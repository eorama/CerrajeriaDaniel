---
import ServiceCard from '../molecules/ServiceCard';
import type { IconName } from '../atoms/Icon';

const services = [
  {
    title: "Apertura de puertas",
    description: "Abrimos tu puerta sin daños. Servicio rápido para viviendas y locales.",
    icon: "door",
    href: "/servicios/apertura-de-puertas-tenerife"
  },
  {
    title: "Apertura de coches",
    description: "Abrimos tu coche al instante, sin daños y con total seguridad. Todas las marcas.",
    icon: "car",
    href: "/servicios/apertura-de-coches-tenerife"
  },
  {
    title: "Apertura de cajas fuertes",
    description: "Expertos en cajas fuertes mecánicas y electrónicas. Recuperamos tu acceso.",
    icon: "shield",
    href: "/servicios/apertura-de-cajas-fuertes-tenerife"
  },
  {
    title: "Cambio de cerraduras",
    description: "Instalación y sustitución de bombines y cerraduras para mejorar tu seguridad.",
    icon: "lock",
    href: "/servicios/cambio-y-reparacion-de-cerraduras-tenerife"
  },
  {
    title: "Amaestramiento de llaves",
    description: "Olvídate de los llaveros pesados. Una sola llave para todas tus puertas.",
    icon: "key",
    href: "/servicios/amaestramiento-de-cerraduras-tenerife"
  },
  {
    title: "Reparación de mandos",
    description: "Reparación y duplicado de mandos de coche y garaje.",
    icon: "check",
    href: "/servicios/reparacion-de-mandos-de-coche-tenerife"
  }
];
---

<section id="servicios" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 font-heading">Nuestros Servicios</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Soluciones integrales de cerrajería en Tenerife. Profesionales cualificados a tu disposición.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map(service => (
        <ServiceCard 
          title={service.title} 
          description={service.description} 
          icon={service.icon as IconName}
          href={service.href} 
        />
      ))}
    </div>
  </div>
</section>
